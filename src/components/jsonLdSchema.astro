---
import type { CollectionEntry } from "astro:content";

type Props = CollectionEntry<"blog">["data"];
const { title, publishDate, snippet, videoThumbnail, videoContentUrl } =
  Astro.props;

const htmlString = `{
    "@context": "https://schema.org",
    "@type": "VideoObject",
    "name": "${title}",
    "description": "${snippet.slice(0, 568)}",
    "thumbnailUrl": "${videoThumbnail}",
    "uploadDate": "${publishDate.toISOString()}",
    "duration": "PT11M30S",
    "contentUrl": "${videoContentUrl}"
}`;
---

<script type="application/ld+json" set:html={htmlString} />
