---
import { changeLanguage } from "i18next";
import { Icon } from "astro-icon";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Button from "@components/ui/button.astro";

changeLanguage("hu");

let contacts = [
	{
		title: "Marketing",
		email: "teszt@ceged.com",
		phone: "+1 (555) 555-5555",
	},
	{
		title: "Emberi Erőforrások",
		email: "teszt@ceged.com",
		phone: "+1 (555) 555-5555",
	},
	{
		title: "Pénzügy",
		email: "teszt@ceged.com",
		phone: "+1 (555) 555-5555",
	},
	{
		title: "Kutatás és Fejlesztés",
		email: "teszt@ceged.com",
		phone: "+1 (555) 555-5555",
	},
];
---

<div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:col-span-2 lg:gap-8">
    {
        contacts.map((item) => (
            <div class="rounded-2xl bg-gray-50 dark:bg-stone-800 p-10">
                <h3 class="text-base font-semibold leading-7 text-gray-900 dark:text-white">{item.title}</h3>
                <dl class="mt-3 space-y-1 text-sm leading-6 text-gray-600 dark:text-white">
                    <div>
                        <dt class="sr-only">E-mail</dt>
                        <dd>
                            <a class="font-semibold text-stone-600 dark:text-white" href="mailto:egyuttmukodes@pelda.com">
                                {item.email}
                            </a>
                        </dd>
                    </div>
                    <div class="mt-1">
                        <dt class="sr-only">Telefonszám</dt>
                        <dd>{item.phone}</dd>
                    </div>
                </dl>
            </div>
        ))
    }
</div>
