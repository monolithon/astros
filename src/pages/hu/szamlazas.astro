---
import { changeLanguage } from "i18next";
import Container from "@components/container.astro";
import Layout from "@layouts/Layout.astro";

changeLanguage("hu");
---

<Layout lang="hu" title="Üzemeltetés">
	<Container>
		<div class="py-20 px-10 md:px-0 text-[#192734] dark:text-white">
			<h1 class="md:text-[60px] mb-10 text-4xl font-semibold">Számlázás</h1>
			<p class="md:text-[40px] text-2xl font-semibold">ERPNext magyar számlázás hamarosan - 2023 Q3</p>
			<div>
				<p class=" text-xl py-10">A magyar szabályoknak megfelelő számla kiállítását az ERPNext rendszerből hamarosan elérhetővé tesszük.			</p>
				<img src="/IyzD8FB.png" alt="" />
			</div>
			<div>
				<p class=" text-xl py-10">Ráadásul nem csak hagyományos számlázóként, hanem pénztárgépként is használható lesz az ERPNext.				</p>
				<img src="/S1Fzpjh.png" alt="" />
			</div>
		</div>
	</Container>
</Layout>
