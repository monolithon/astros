---
import i18next, { changeLanguage } from "i18next";
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Posts from "@components/blog/posts.astro";
import Sectionhead from "@components/sectionhead.astro";
import Pagination from "@components/blog/pagination.astro";

changeLanguage("hu");

export async function getStaticPaths({ paginate }) {
  changeLanguage("hu");
  const posts = await getCollection("blog", ({ data }) => {
    return !data.draft && data.publishDate < new Date();
  });
  const localizedPosts = posts.filter((page) => {
    const [lang, ...slug] = page.slug.split("/");
    return lang === i18next.language;
  });
  const categorySet = new Set();
  localizedPosts.map((post) => {
    Array.isArray(post.data.category) && post.data.category.map((category) => categorySet.add(category.toLowerCase()));
  });
  return Array.from(categorySet).map((category: string) =>
    paginate(
      localizedPosts.filter((post) => Array.isArray(post.data.category) && post.data.category.find((elem) => elem.toLowerCase() === category)),
      {
        params: { category: category, blog: "category" || undefined },
        pageSize: 6,
        props: { category },
      }
    )
  );
}
const { page, category } = Astro.props;
---

<Layout title="Blog" lang="hu">
  <Container>
    <Sectionhead>
      <Fragment slot="title">#ERPNext és Frappe {category.replace(/-/g, " ")}</Fragment>
      <Fragment slot="desc">
        ERPNext és Frappe {category.replace(/-/g, " ")} mindenkinek.
      </Fragment>
    </Sectionhead>
    <Posts posts={page.data} />
    <Pagination class="mt-20" prevUrl={page.url.prev} nextUrl={page.url.next} />
  </Container>
</Layout>
